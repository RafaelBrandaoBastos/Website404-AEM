<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Multifield Component"
          sling:resourceType="cq/gui/components/authoring/dialog">
   <content jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
      <layout jcr:primaryType="nt:unstructured"
              margin="{Boolean}false"
              sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
      <items jcr:primaryType="nt:unstructured">
         <column jcr:primaryType="nt:unstructured"
                 sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
               <textcontent composite="{Boolean}true"
                            fieldLabel="TextMultifield"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield">
                  <field cq-msm-lockable="./textcontent"
                         jcr:primaryType="nt:unstructured"
                         name="./textcontent"
                         sling:resourceType="granite/ui/components/foundation/form/fieldset">
                     <items jcr:primaryType="nt:unstructured">
                        <title fieldLabel="Digite um título para o componente"
                               jcr:primaryType="nt:unstructured"
                               name="./title"
                               sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                        <titleColor fieldLabel="Cor do texto"
                                    jcr:primaryType="nt:unstructured"
                                    name="./titleColor"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"/>
                        <titleSize fieldLabel="Digite um tamanho para o componente em px"
                                   jcr:primaryType="nt:unstructured"
                                   name="./titleSize"
                                   sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                        <text fieldLabel="Digite um texto para o componente"
                              jcr:primaryType="nt:unstructured"
                              name="./text"
                              sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                        <textColor fieldLabel="Cor do texto"
                                   jcr:primaryType="nt:unstructured"
                                   name="./textColor"
                                   sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"/>
                        <textSize fieldLabel="Digite um tamanho para o componente em px"
                                  jcr:primaryType="nt:unstructured"
                                  name="./textSize"
                                  sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                        <label fieldLabel="Digite uma label para o componente"
                               jcr:primaryType="nt:unstructured"
                               name="./label"
                               sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                        <labelColor fieldLabel="Cor do botão"
                                    jcr:primaryType="nt:unstructured"
                                    name="./labelColor"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/colorfield"/>
                        <labelSize fieldLabel="Digite um tamanho para o componente em px"
                                   jcr:primaryType="nt:unstructured"
                                   name="./labelSize"
                                   sling:resourceType="granite/ui/components/coral/foundation/form/textfield"/>
                     </items>
                  </field>
               </textcontent>
            </items>
         </column>
      </items>
   </content>
</jcr:root>
